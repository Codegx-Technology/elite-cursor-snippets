{
  "manifest_version": 3,
  "name": "Elite Automation - AI Chat Enhancer",
  "version": "1.0.0",
  "description": "Automatically enhances AI chat prompts with Elite Automation intelligence",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  
  "host_permissions": [
    "https://*.cursor.sh/*",
    "https://*.windsurf.ai/*", 
    "https://*.gemini.google.com/*",
    "https://*.claude.ai/*",
    "https://*.openai.com/*",
    "https://*.github.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": [
        "https://*.cursor.sh/*",
        "https://*.windsurf.ai/*",
        "https://*.gemini.google.com/*",
        "https://*.claude.ai/*",
        "https://*.openai.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Elite Automation",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png", 
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["elite-automation-core.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
