{
  "manifest_version": 3,
  "name": "Elite Automation",
  "version": "2.0.0",
  "description": "Automatically enhance AI chat prompts with intelligent context for better responses",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  
  "host_permissions": [
    "https://cursor.sh/*",
    "https://codeium.com/*",
    "https://*.codeium.com/*",
    "https://windsurf.greptile.com/*",
    "https://*.windsurf.com/*",
    "https://gemini.google.com/*",
    "https://bard.google.com/*",
    "https://claude.ai/*",
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "*://localhost/*",
    "https://*/*"
  ],
  
  "content_scripts": [
    {
      "matches": [
        "https://cursor.sh/*",
        "https://codeium.com/*",
        "https://*.codeium.com/*",
        "https://windsurf.greptile.com/*",
        "https://*.windsurf.com/*",
        "https://gemini.google.com/*",
        "https://bard.google.com/*",
        "https://claude.ai/*",
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "*://localhost/*",
        "https://*/*"
      ],
      "js": [
        "elite-automation-core.js",
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Elite Automation"
  },

  
  "web_accessible_resources": [
    {
      "resources": ["elite-automation-core.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
